<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">        
        <shape>
            <gradient
                android:startColor="#802420"
                android:endColor="#BD362F"
                android:angle="0" />
            <stroke
                android:width="1dp"
                android:color="#444" />
            <!--  <stroke
                android:width="1dp"
                android:color="#BD362F" />-->
            <corners
                android:radius="0dp" />
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp" />
        </shape>
    </item>  
    <item  android:state_checked="false" >
        <shape>
            <gradient
                android:startColor="#EE5F5B"
                android:endColor="#BD362F"
                android:angle="0" />
            <stroke
                android:width="0dp"
                android:color="#BD362F" />
            <corners
                android:radius="0dp" />
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp" />
        </shape>
	</item>
</selector>