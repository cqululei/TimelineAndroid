                android:id="@+id/layout_item" 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" android:minHeight="80dp"
                local:zoneType="ZONETYPEITEM" android:orientation="vertical"
                android:background="@drawable/button_inverse_selector"     
                >
                <TextView android:layout_gravity="center_vertical" android:layout_marginTop="30dp"
                    android:id="@+id/item_txt" 
	                android:layout_width="wrap_content"
